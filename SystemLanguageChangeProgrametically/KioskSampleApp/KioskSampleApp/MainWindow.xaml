<Window x:Class="KioskSampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
       
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Background="LightBlue">
    <Grid>
        <TextBlock Text="My Kiosk App" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="48" Margin="0,50,0,0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="LaunchButton" Content="Launch OSK" Width="200" Height="100" FontSize="24" Margin="30,0,30,0" Click="LaunchButton_Click" />
            <Button x:Name="CloseButton" Content="Close OSK" Width="200" Height="100" FontSize="24" Margin="30,0,30,0" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
